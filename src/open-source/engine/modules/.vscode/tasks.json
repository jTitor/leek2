{
	"version": "2.0.0",
	"command": "cargo",
	"type": "shell",
	"presentation": {
		"reveal": "always"
	},
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "cargo build",
			"args": [
				"build"
			],
			"group": "build",
			"problemMatcher": {
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": [
					{
						"regexp": "(info|warning|error)(\\[(\\w*)\\])?: (.*)",
						"severity": 1,
						"message": 4,
						"code": 3
					},
					{
						"regexp": "\\s*-->\\s*(.*):([0-9]*):([0-9]*)",
						"file": 1,
						"line": 2,
						"column": 3
					}
				]
			}
		},
		{
			"taskName": "cargo run",
			"args": [
				"run"
			],
			"problemMatcher": {
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": [
					{
						"regexp": "(info|warning|error)(\\[(\\w*)\\])?: (.*)",
						"severity": 1,
						"message": 4,
						"code": 3
					},
					{
						"regexp": "\\s*-->\\s*(.*):([0-9]*):([0-9]*)",
						"file": 1,
						"line": 2,
						"column": 3
					}
				]
			}
		},
		{
			"taskName": "cargo test",
			"args": [
				"test"
			],
			"group": "test",
			"problemMatcher": {
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": [
					{
						"regexp": "(info|warning|error)(\\[(\\w*)\\])?: (.*)",
						"severity": 1,
						"message": 4,
						"code": 3
					},
					{
						"regexp": "\\s*-->\\s*(.*):([0-9]*):([0-9]*)",
						"file": 1,
						"line": 2,
						"column": 3
					}
				]
			}
		}
	]
}